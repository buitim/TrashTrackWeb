<div class="main manage create centered_text fades_in">

	<h2>Create New Row In Database</h2>
	<p>{{message}}</p>

	<div class="spacing3"></div>

	<div class="admin_panel">

		<form action="/create" method="post">
			
			<input type="radio" name="table" value="character" checked> 
			<p class="bold_text">Add Character</p>
			
			<input type="text" name="first_name" placeholder="First Name">
			<input type="text" name="last_name" placeholder="Last Name">
			<input type="number" name="actor_id" placeholder="Voice Actor ID">
			<input type="number" name="show_id" placeholder="Show ID"> 
			
			<input class="link_button link_button_thin" type="submit" value="Submit">

		</form>
		
		<br>

		<form action="/create" method="post">
	
			<input type="radio" name="table" value="voice_actor" checked> 
			<p class="bold_text">Add Voice Actor</p>
			
			<input type="text" name="first_name" placeholder="First Name">
			<input type="text" name="last_name" placeholder="Last Name">
			
			<input class="link_button link_button_thin" type="submit" value="Submit">
			
		</form>
		
		<br>

		<form action="/create" method="post">

			<input type="radio" name="table" value="show" checked> 
			<p class="bold_text">Add Show</p>
			
			<input type="text" name="title" placeholder="Show Title">
			<input type="number" name="studio_id" placeholder="Studio ID">
			<input type="number" name="season_id" placeholder="Season ID">
			
			<input class="link_button link_button_thin" type="submit" value="Submit">

		</form>
		
		<br>

		<form action="/create" method="post">

			<input type="radio" name="table" value="studio" checked> 
			<p class="bold_text">Add Studio</p>
			
			<input type="text" name="name" placeholder="Name">

			<input class="link_button link_button_thin" type="submit" value="Submit">
			
		</form>
		
		<br>

		<form action="/create" method="post">

			<input type="radio" name="table" value="season" checked> 
			<p class="bold_text">Add Season</p>
			
			<input type="text" name="season" placeholder="Season">
			<input type="number" name="year" placeholder="Year">
			
			<input class="link_button link_button_thin" type="submit" value="Submit">

		</form>

	</div>

</div>